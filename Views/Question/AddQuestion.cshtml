@model Quiz_App.Models.QuestionViewModel.Question


<section class="m-5">

    <h1 class="text-center mb-5">Add new question</h1>


    <form method="post">

            @* question form starts here *@

        <input type="hidden" asp-for="ExamId" />

        <section id="questions-container" class="mb-5">
            <fieldset class="container mt-5 p-4 border rounded shadow">

                <div class="row mb-4">
                    <div class="col-md-12">
                        <label class="form-label fw-bold" for="QuestionTitle" >Question:</label>
                        <textarea name="QuestionTitle" id="QuestionTitle" class="form-control" rows="2" required asp-for="QuestionTitle"></textarea>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-8">
                        <p class="fw-bold">Choices:</p>
                        <div class="d-flex flex-column gap-2">
                            <input type="text" class="form-control" placeholder="Choice 1" required asp-for="Choice_1"/>
                            <input type="text" class="form-control" placeholder="Choice 2" required asp-for="Choice_2" />
                            <input type="text" class="form-control" placeholder="Choice 3" required asp-for="Choice_3" />
                            <input type="text" class="form-control" placeholder="Choice 4" required asp-for="Choice_4" />
                        </div>
                    </div>

                    <div class="col-md-4">
                        <p class="fw-bold">Answer:</p>
                        <div class="d-flex flex-column gap-2">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" asp-for="CorrectAnswer" id="Choice_1" value="Choice_1">
                                <label class="form-check-label" for="Choice_1">Choice 1</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" asp-for="CorrectAnswer" id="Choice_2" value="Choice_2">
                                <label class="form-check-label" for="Choice_2">Choice 2</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" asp-for="CorrectAnswer" id="Choice_3" value="Choice_3">
                                <label class="form-check-label" for="Choice_3">Choice 3</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" asp-for="CorrectAnswer" id="Choice_4" value="Choice_4">
                                <label class="form-check-label" for="Choice_4">Choice 4</label>
                            </div>
                        </div>
                    </div>

                </div>
            </fieldset>

        </section>


        @* submit and cancel buttons *@
        <div class="row justify-content-end" style="margin-top: 200px;">
            <div class="col-auto">
                <button type="submit" class="btn btn-success">Submit</button>
            </div>
            <div class="col-auto">
                <a href="javascript:history.back()" class="btn btn-secondary" onclick="return confirm('Are you sure? This will discard all data.')">Cancel</a>
            </div>
        </div>

    </form>
</section>
